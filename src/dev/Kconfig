menu "Device options"

config SERIAL_REDIRECT
    bool "Serial Debugging"
    depends on DEBUG_PRINTS
    default n
    help
        Redirect all printing to serial device

config DEBUG_APIC
    bool "Debug APIC"
    depends on DEBUG_PRINTS
    default n
    help
        Turn on debug prints for the LAPIC driver

config DEBUG_IOAPIC
    bool "DEBUG IOAPIC"
    depends on DEBUG_PRINTS
    default n
    help 
        Turn on debug prints for the IOAPIC driver

config DEBUG_PCI
    bool "Debug PCI"
    depends on DEBUG_PRINTS
    default n
    help 
        Turn on debug prints for PCI devices

config DEBUG_KBD
    bool "Debug Keyboard"
    depends on DEBUG_PRINTS
    default n
    help
        Turn on debug prints for the keyboard

config HZ
    int "Timer interrupt frequency"
    range 100 10000
    default "100"
    help
        Specifies the 8254 PIT default timer
        interrupt frequency
endmenu

    
